<header><h1>Books</h1></header>

<!--Makiing book list-->
<div class="booklist">
  <table>
    <!--Making table head-->
    <thead>
      <tr>
        <th>title</th>
        <th>body</th>
      </tr>
    </thead>

    <!--Making table content-->
    <tbody>
      <% @booklist.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to 'Show', "/books/#{book.id}" %></td>
          <td>Edit</td>
          <td>Destroy</td>
        </tr>
      <% end %>
    </tbody>

  </table>
</div>

<!--Making new book-->
<div class="newBook">
  <div class=newBookHeader>
    <h3> New Book</h3>
  </div>

  <%= form_with model: @newbook, method: :post do |f|%>

    <div class="newBookPost">
    <p>Title</p>
    <%= f.text_field :title %>

    <p>Body</p>
    <%= f.text_area :body%>
    </div>

    <div class="newBooksubmit"><%= f.submit 'Creat Book' %></div>
  <% end %>
</div>